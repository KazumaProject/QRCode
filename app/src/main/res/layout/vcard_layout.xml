<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/vcard_parent_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:background="@color/result_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/vcard_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/vcard_name_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:textColor="?attr/colorOnSecondary"
        android:maxLines="2"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/vcard_name_title"
        app:layout_constraintStart_toEndOf="@+id/vcard_name_title"
        app:layout_constraintTop_toTopOf="@+id/vcard_name_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.7" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/vcard_phone_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone:"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="128dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vcard_name_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/vcard_mobile_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textColor="?attr/colorOnSecondary"
        android:maxLines="3"
        android:textSize="22sp"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/vcard_phone_title"
        app:layout_constraintStart_toEndOf="@+id/vcard_phone_title"
        app:layout_constraintTop_toTopOf="@+id/vcard_phone_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/vcard_email_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="128dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vcard_phone_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/vcard_email_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textColor="?attr/colorOnSecondary"
        android:maxLines="2"
        android:textSize="22sp"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintBottom_toBottomOf="@+id/vcard_email_title"
        app:layout_constraintStart_toEndOf="@+id/vcard_email_title"
        app:layout_constraintTop_toTopOf="@+id/vcard_email_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/vcard_company_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company:"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="64dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vcard_email_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/vcard_company_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textColor="?attr/colorOnSecondary"
        android:maxLines="2"
        android:textSize="22sp"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintBottom_toBottomOf="@+id/vcard_company_title"
        app:layout_constraintStart_toEndOf="@+id/vcard_company_title"
        app:layout_constraintTop_toTopOf="@+id/vcard_company_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/vcard_address_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="128dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vcard_company_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/vcard_address_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textColor="?attr/colorOnSecondary"
        android:maxLines="5"
        android:textSize="22sp"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/vcard_address_title"
        app:layout_constraintStart_toEndOf="@+id/vcard_address_title"
        app:layout_constraintTop_toTopOf="@+id/vcard_address_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/vcard_zip_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZIP:"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="128dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vcard_address_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/vcard_zip_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textColor="?attr/colorOnSecondary"
        android:maxLines="2"
        android:textSize="22sp"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintBottom_toBottomOf="@+id/vcard_zip_title"
        app:layout_constraintStart_toEndOf="@+id/vcard_zip_title"
        app:layout_constraintTop_toTopOf="@+id/vcard_zip_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/vcard_website_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Website:"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="64dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vcard_zip_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/vcard_website_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textColor="?attr/colorOnSecondary"
        android:maxLines="2"
        android:textSize="22sp"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintBottom_toBottomOf="@+id/vcard_website_title"
        app:layout_constraintStart_toEndOf="@+id/vcard_website_title"
        app:layout_constraintTop_toTopOf="@+id/vcard_website_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vcard_website_title">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/open_email_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Open"
            android:textSize="13sp"
            android:textColor="?attr/colorOnSecondary"
            app:icon="@drawable/baseline_open_in_browser_24"
            app:iconTint="?attr/colorOnSecondary"
            android:layout_marginHorizontal="4dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/email_share_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Share"
            android:textSize="13sp"
            app:iconTint="?attr/colorOnSecondary"
            app:icon="@drawable/baseline_ios_share_24"
            app:iconGravity="start"
            android:textColor="?attr/colorOnSecondary"
            android:layout_marginHorizontal="4dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/email_copy_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Copy"
            android:textSize="13sp"
            app:iconTint="?attr/colorOnSecondary"
            app:icon="@drawable/baseline_content_copy_24"
            app:iconGravity="start"
            android:textColor="?attr/colorOnSecondary"
            android:layout_marginHorizontal="4dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>