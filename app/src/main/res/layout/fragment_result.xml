<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.result.ResultFragment">

   <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
       android:id="@+id/swipe_to_refresh_result"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >

       <androidx.core.widget.NestedScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="400dp">

               <androidx.constraintlayout.widget.ConstraintLayout
                   android:id="@+id/constraintLayout"
                   android:layout_width="match_parent"
                   android:layout_height="80dp"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent">

                   <com.google.android.material.imageview.ShapeableImageView
                       android:id="@+id/result_back_btn"
                       android:layout_width="24dp"
                       android:layout_height="24dp"
                       android:layout_marginStart="16dp"
                       android:src="@drawable/arrow_back_ios"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent" />

                   <com.google.android.material.textview.MaterialTextView
                       android:id="@+id/result_code_type_text"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="QR CODE"
                       android:textSize="24sp"
                       android:layout_marginStart="32dp"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintStart_toEndOf="@+id/result_back_btn"
                       app:layout_constraintTop_toTopOf="parent" />

                   <com.google.android.material.imageview.ShapeableImageView
                       android:id="@+id/result_copy_img"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:layout_marginEnd="24dp"
                       android:src="@drawable/baseline_content_copy_24"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintTop_toTopOf="parent" />

                   <com.google.android.material.imageview.ShapeableImageView
                       android:id="@+id/result_share_img"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:src="@drawable/share"
                       android:layout_marginEnd="24dp"
                       app:layout_constraintBottom_toBottomOf="@+id/result_copy_img"
                       app:layout_constraintEnd_toStartOf="@+id/result_copy_img"
                       app:layout_constraintTop_toTopOf="@+id/result_copy_img" />

                   <com.google.android.material.imageview.ShapeableImageView
                       android:id="@+id/result_action_img"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:src="@drawable/open_in_browser"
                       android:layout_marginEnd="24dp"
                       android:visibility="gone"
                       app:layout_constraintBottom_toBottomOf="@+id/result_share_img"
                       app:layout_constraintEnd_toStartOf="@+id/result_share_img"
                       app:layout_constraintTop_toTopOf="@+id/result_share_img"/>

               </androidx.constraintlayout.widget.ConstraintLayout>

               <View
                   android:id="@+id/view"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginHorizontal="4dp"
                   android:background="@color/off_white"
                   app:layout_constraintTop_toBottomOf="@+id/constraintLayout"/>

               <androidx.constraintlayout.widget.ConstraintLayout
                   android:id="@+id/result_min_container"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:layout_constraintTop_toBottomOf="@+id/view"
                   android:layout_marginTop="4dp"
                   android:layout_marginHorizontal="8dp">

                   <com.google.android.material.textview.MaterialTextView
                       android:id="@+id/result_min_result_text"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginHorizontal="8dp"
                       android:textSize="26sp"
                       app:layout_constraintTop_toTopOf="parent"
                       tools:layout_editor_absoluteX="8dp" />

               </androidx.constraintlayout.widget.ConstraintLayout>


           </androidx.constraintlayout.widget.ConstraintLayout>

       </androidx.core.widget.NestedScrollView>

   </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>