<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cryptocurrency_parent_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/result_bg"
    android:visibility="visible"
    >

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/cryptocurrency_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currency:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="64dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_cryptocurrency_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:textColor="?attr/colorOnSecondary"
        android:maxLines="1"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cryptocurrency_title"
        app:layout_constraintStart_toEndOf="@+id/cryptocurrency_title"
        app:layout_constraintTop_toTopOf="@+id/cryptocurrency_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.7" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/cryptocurrency_amount_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Amount:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cryptocurrency_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/cryptocurrency_text_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@+id/cryptocurrency_amount_title"
        app:layout_constraintStart_toEndOf="@+id/cryptocurrency_amount_title"
        app:layout_constraintTop_toTopOf="@+id/cryptocurrency_amount_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/cryptocurrency_title_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/cryptocurrency_amount_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/cryptocurrency_title_address_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@+id/cryptocurrency_title_address"
        app:layout_constraintStart_toEndOf="@+id/cryptocurrency_title_address"
        app:layout_constraintTop_toTopOf="@+id/cryptocurrency_title_address" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/cryptocurrency_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message:"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/cryptocurrency_title_address" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/cryptocurrency_message_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingHorizontal="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cryptocurrency_message"
        app:layout_constraintTop_toBottomOf="@+id/cryptocurrency_message" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cryptocurrency_message_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/share_crypto_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Share"
            android:textSize="13sp"
            app:iconTint="?attr/colorOnSecondary"
            app:icon="@drawable/baseline_ios_share_24"
            app:iconGravity="start"
            android:textColor="?attr/colorOnSecondary"
            android:layout_marginHorizontal="4dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/copy_crypto_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Copy"
            android:textSize="13sp"
            app:iconTint="?attr/colorOnSecondary"
            app:icon="@drawable/baseline_content_copy_24"
            app:iconGravity="start"
            android:textColor="?attr/colorOnSecondary"
            android:layout_marginHorizontal="4dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>